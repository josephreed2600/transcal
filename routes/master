const nav = require('./nav.json');

const dashboard = (req, res) => {
	res.render('dashboard', {
		title: 'Dashboard',
		link: `/dashboard`,
		navbar: nav
	});
};

const wiki = (req, res) => {
	res.render('wiki', {
		title: 'req.params.name',
		link: `/wiki/${req.params.name}`,
		navbar: nav
	});
};

const settings = (req, res) => {
	res.render('settings', {
		title: 'Settings',
		link: `/settings`,
		navbar: nav
	});
};

module.exports = {
	dashboard,
	wiki,
	settings
};
